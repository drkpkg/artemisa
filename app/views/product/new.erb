<div class="col-md-4 center">
  <br>
  <% if flash[:error] %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= flash[:error] %>
      </div>
  <% end %>
  <h3>Registro de nuevo producto</h3>
  <%= form_for :product, url: '/products/create', html: {class: 'new-form'} do |f| %>
      <div class="input-group">
        <span class="input-group-addon">Nombre del producto</span>
        <%= f.text_field :product_name, :class => "form-control" %>
      </div>
      <br>
      <div class="input-group">
        <span class="input-group-addon">Descripción</span>
        <%= f.text_area :product_description, :class => "form-control" %>
      </div>
      <br>
      <% if ProductType.all.empty? %>
          <div class="input-group">
            <div class="thumbnail">
              No existe ningún tipo listado dentro de la aplicación, por favor <a href="/categories/list_all">crea el tipo antes</a> antes de agregar el este activo fijo.
            </div>
          </div>
      <% else %>
          <div class="input-group">
            <span class="input-group-addon">Tipo</span>
            <%= f.select :product_type, {},{},{class: "form-control"} do %>
                <% ProductType.all.each do |index| %>
                    <%= content_tag(:option, index.product_type_description, value: index.id) %>
                <% end %>
            <% end %>
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon">Precio de compra (Bs)</span>
            <%= f.text_field :product_price_buy, :class => 'form-control', :onkeypress => 'return onlyNumbers(event)'%>
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon">Precio de venta (Bs)</span>
            <%= f.text_field :product_price_sell, :class => 'form-control', :onkeypress => 'return onlyNumbers(event)'%>
          </div>
          <br>
          <div class="btn-group pull-right">
            <%= f.submit 'Guardar', :class => 'btn btn-success' %>
            <%= link_to 'Cancelar', '/products', class: 'btn btn-info' %>
          </div>
      <% end %>
  <% end %>
</div>
