<div id="modify-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Modificar</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon normalize-size">Marca</span>
            <input id="marca" class="form-control" type="text">
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon normalize-size">Producto</span>
            <input id="producto" class="form-control" type="text">
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon normalize-size">Precio</span>
            <input type="text" id="precio" class="form-control" onkeypress="return onlyNumbers(event)">
          </div>
          <br>
          <div class='input-group date' id='datetimepicker'>
            <span class="input-group-addon normalize-size">Fecha de vencimiento</span>
            <input id="vencimiento" type="text" class="form-control" placeholder= "Fecha de nacimiento" data-toggle="tooltip" data-placement = "top" title="Fecha de nacimiento" >
            <span class="input-group-addon">
                <span class="fa fa-calendar"></span>
             </span>
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon normalize-size">Tipo de producto</span>
            <select id="categoria" class="form-control">
              <% ProductoTipo.all.each do |type| %>
                <option value="<%= type.id %>"><%= type.nombre_tipo_producto %></option>
              <% end %>
            </select>
          </div>
          <br>
          <div class="input-group">
            <span class="input-group-addon normalize-size">Lote</span>
            <select id="lote" class="form-control">
              <% Lote.all.each do |type| %>
                  <option value="<%= type.id %>"><%= type.lote %></option>
              <% end %>
            </select>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button id="save-btn" type="button" class="btn btn-primary">Guardar cambios</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
