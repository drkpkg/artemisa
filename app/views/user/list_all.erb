<div class="container-fluid">
    <div class="col-md-9 row">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">
                <label>NÃ³mina de usuarios</label>
                <button type="button" class="btn btn-success pull-right" id="btn-category" data-toggle="tooltip" data-placement="top" title="Nuevo usuario" onclick="newUser()">
                    <i class="fa fa-user-plus"></i>
                </button>
            </div>
           <div class="panel-body">
               <table class="table">
                   <thead>
                   <tr>
                       <th>Usuario</th>
                       <th>Nombre completo</th>
                       <th>Direccion</th>
                       <th>Email</th>
                       <th>Grupo</th>
                   </tr>
                   </thead>
                   <tbody>
                   <% @user.each do |actual_index| %>
                       <tr>
                           <td id="actual-identity-<%= actual_index.id %>">
                               <%= actual_index.username %>
                           </td>
                           <td>
                               <div class="input-group">
                                   <label  id="actual-name-<%= actual_index.id %>" class="label-normal"><%= actual_index.name %></label>
                                   <label  id="actual-flastname-<%= actual_index.id %>" class="label-normal"><%= actual_index.father_last_name %></label>
                                   <label  id="actual-mlastname-<%= actual_index.id %>" class="label-normal"><%= actual_index.mother_last_name %></label>
                               </div>
                           </td>
                           <td id="actual-direction-<%= actual_index.id %>">
                               <%= actual_index.home_address %>
                           </td>
                           <td id="actual-email-<%= actual_index.id %>">
                               <%= actual_index.email %>
                           </td>
                           <td id="actual-group-<%= actual_index.id %>">
                               <% group = Group.find_by(id: actual_index.id) %>
                               <% if !group.blank? %>
                                   <%= group.group_name %>
                               <% else %>
                                    Sin grupo
                               <% end %>
                           </td>
                           <td>
                               <% if actual_index.username != 'admin' %>
                                   <div class="btn-group">
                                       <a href="#" data-toggle="tooltip" data-placement="top" title="Modificar" onclick="editUser('<%= actual_index.id %>')">
                                           <i class="fa fa-edit fa-2x"></i>
                                       </a>
                                       <a href="#" data-toggle="tooltip" data-placement="top" title="Eliminar" onclick="deleteUser('<%= actual_index.id %>')">
                                           <i class="fa fa-close fa-2x"></i>
                                       </a>
                                   </div>
                               <% end %>
                           </td>
                       </tr>
                   <% end %>
                   </tbody>
               </table>
           </div>
        </div>
    </div>

    <%= render partial: 'group/list_all' %>
</div>
</div>

<div id="modify-user-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="user-username-title" class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <div class="modal-body">
                    <%= render partial: 'modify' %>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="save-category" onclick="createUser()">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>

<div id="new-user-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Nuevo usuario</h4>
            </div>
            <div class="modal-body">
                <div class="modal-body">
                    <%= render partial: 'new' %>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="save-category" onclick="createUser()">Crear nuevo usuario</button>
            </div>
        </div>
    </div>
</div>

<div id="new-group-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Nuevo grupo</h4>
            </div>
            <div class="modal-body">
                <%= render partial: 'group/new' %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="save-category" onclick="createGroup()">Crear nuevo grupo</button>
            </div>
        </div>
    </div>
</div>